{
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "mcp-server-azuredevops",
      "args": [
        "${input:ado_org}",
        "-d",
        "core",
        "work",
        "workitems"
        // ... any other domain to enable, you can also use 'all' (which is already the default)
      ]
    }
  },
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name (e.g. 'contoso')"
    }
  ]
}
