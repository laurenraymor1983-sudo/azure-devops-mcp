{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name (e.g. 'contoso')"
    },
    {
      "id": "domains",
      "type": "pickManyString",
      "description": "Select Azure DevOps domains to enable. Choose specific domains to reduce the number of available tools, or select 'all' to enable everything.",
      "options": ["advanced-security", "builds", "core", "releases", "repositories", "search", "test-plans", "wiki", "work", "work-items", "all"],
      "default": ["all"]
    }
  ],
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "mcp-server-azuredevops",
      "args": ["${input:ado_org}", "${input:domains}"]
    }
  }
}
