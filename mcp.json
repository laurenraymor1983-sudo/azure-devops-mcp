{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name (e.g. 'contoso')"
    },
    {
      "id": "target_domains",
      "type": "pickManyString",
      "description": "Azure DevOps target domain(s) intended to enable, only you select any, only those will be enalbed. This will help you reduce number of tools enabled",
      "options": ["advanced-security", "builds", "core", "releases", "repositories", "search", "test-plans", "wiki", "work", "work-items", "all"],
      "default": ["all"]
    }
  ],
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "mcp-server-azuredevops",
      "args": ["${input:ado_org}", "${input:only_picked_domains}"]
    }
  }
}
